/* 农贸品类(下拉框) */
.product {
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.product .title {
  width: 200rpx;
}

/* 下拉框部分 */
.select_box {
  width: 100%;
  text-align: left;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}
/* 农贸品类(下拉框)--end */

.section {
  display: flex;
  flex-direction: row;
  margin: 40rpx;
}
.section view {
  margin-right: 20rpx;
}
.btn-area {
  margin: 30rpx;
}

.btn-area button {
  width: 600rpx;
}